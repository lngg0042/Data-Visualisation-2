{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "width": 800,
      "height": 450,
      "title": {"text": "Airports in Malaysia", "fontSize": 20, "font": "Arial"},
      "projection": {
        "type": "conicEqualArea",
        "center": [110, 4],
        "parallels": [1, 0],
        "scale": 2300,
        "translate": [425, 225]
      },
      "layer": [
        {
          "mark": {"type": "rect", "fill": null, "stroke": "black", "strokeWidth": 2},
          "encoding": {"x": {"value": 0}, "y": {"value": 0}, "x2": {"value": 800}, "y2": {"value": 450}}
        },
        {
          "data": {"graticule": {"step": [5, 5]}},
          "mark": {
            "type": "geoshape",
            "stroke": "#cccccc",
            "strokeWidth": 0.8,
            "opacity": 0.8
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/lngg0042/Data-Visualisation-2/refs/heads/main/my_state.json",
            "format": {"type": "topojson", "feature": "my"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black", "strokeWidth": 0.5}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/lngg0042/Data-Visualisation-2/refs/heads/main/my-airports.csv"
          },
          "transform": [
            {"filter": "datum.name != 'name'"},
            {"filter": "datum.type != '#loc +airport +type'"},
            {"filter": "datum.type != 'heliport'"},
            {
              "calculate": "datum.type == 'large_airport' ? 'Large Airport' : datum.type == 'medium_airport' ? 'Medium Airport' : datum.type == 'small_airport' ? 'Small Airport' : datum.type == 'closed' ? 'Closed' : datum.type",
              "as": "type_label"
            }
          ],
          "mark": "circle",
          "params": [
            {
              "name": "airportType",
              "select": {"type": "point", "fields": ["type_label"]},
              "bind": "legend"
            }
          ],
          "encoding": {
            "longitude": {"field": "longitude_deg", "type": "quantitative"},
            "latitude": {"field": "latitude_deg", "type": "quantitative"},
            "size": {"value": 50},
            "color": {
              "field": "type_label",
              "type": "nominal",
              "title": "Airport Type",
              "scale": {"range": ["#E69F00", "#56B4E9", "#0072B2", "#CC79A7", "#8B4513", "#FF69B4", "#808080"]},
              "legend": {"titleFontSize": 15, "labelFontSize": 13, "symbolSize": 100, "symbolStrokeWidth": 4}
            },
            "opacity": {"condition": {"param": "airportType", "value": 1}, "value": 0.2},
            "tooltip": [
              {"field": "name", "title": "Airport"},
              {"field": "municipality", "title": "City"},
              {"field": "region_name", "title": "State"},
              {"field": "type_label", "title": "Type"}
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/lngg0042/Data-Visualisation-2/refs/heads/main/my-airports.csv"
          },
          "transform": [{"filter": "datum.type == 'large_airport'"}],
          "mark": {"type": "text", "dy": -8, "fontSize": 10, "fontWeight": "bold", "color": "black"},
          "encoding": {
            "longitude": {"field": "longitude_deg"},
            "latitude": {"field": "latitude_deg"},
            "text": {"field": "name"}
          }
        }
      ]
    },
    {
      "width": 800,
      "height": 300,
      "title": {"text": "Number of Airports by State and Type", "fontSize": 20, "font": "Arial"},
      "data": {
        "url": "https://raw.githubusercontent.com/lngg0042/Data-Visualisation-2/refs/heads/main/my-airports.csv"
      },
      "transform": [
        {"filter": "datum.name != 'name'"},
        {"filter": "datum.type != '#loc +airport +type'"},
        {"filter": "datum.type != 'heliport'"},
        {
          "calculate": "datum.type == 'large_airport' ? 'Large Airport' : datum.type == 'medium_airport' ? 'Medium Airport' : datum.type == 'small_airport' ? 'Small Airport' : datum.type == 'closed' ? 'Closed' : datum.type",
          "as": "type_label"
        },
        {"filter": {"param": "airportType"}},
        {"aggregate": [{"op": "count", "as": "Airport Count"}], "groupby": ["region_name", "type_label"]}
      ],
      "mark": {"type": "bar"},
      "encoding": {
        "x": {
          "field": "region_name",
          "type": "ordinal",
          "title": "State",
          "sort": "-y",
          "axis": {
            "labelAngle": -45,
            "labelFontSize": 12,
            "titleFontSize": 14,
            "labelFont": "Arial",
            "titleFont": "Arial",
            "labelColor": "black",
            "titleColor": "black"
          }
        },
        "y": {
          "field": "Airport Count",
          "type": "quantitative",
          "title": "Number of Airports",
          "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14,
            "grid": true,
            "gridColor": "#e0e0e0",
            "tickSize": 5,
            "domain": true
          }
        },
        "color": {"field": "type_label", "type": "nominal", "title": "Airport Type"},
        "tooltip": [
          {"field": "region_name", "title": "State"},
          {"field": "type_label", "title": "Airport Type"},
          {"field": "Airport Count", "title": "Number of Airports"}
        ]
      }
    }
  ]
}
